        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ceia"
                style="@style/cardapio_titulo"
                android:textSize="16sp"
                android:id="@+id/textView"  />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tag="Ceia"
                android:src="@mipmap/ic_action"
                android:id="@+id/clockCeia"
                android:layout_alignTop="@+id/switchCeia"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horaCeia"
                android:tag="Ceia"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_alignBottom="@+id/switchCeia"
                android:layout_toRightOf="@+id/clockCeia"
                android:layout_toEndOf="@+id/clockCeia" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchCeia"
                android:textOff="OFF"
                android:textOn="ON"
                android:tag="Ceia"
                android:gravity="right"
                android:layout_below="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>


    </LinearLayout>
</ScrollView>