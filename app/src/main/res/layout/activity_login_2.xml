<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="30dp"
    android:background="#ffb2b2b2" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/QuaseLa"
            android:id="@+id/txtQuasela"
            />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:hint="Peso inicial*"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/edtPesoIni"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:hint="Altura*"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/edtAltura"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Peso Meta*"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/edtPesoMeta"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Biceps"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/edtBiceps"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Cintura"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/edtCintura"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Quadril"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/edtQuadril"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="Perna"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/edtPerna"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/LinkPrivacidade"
            android:id="@+id/LinkPrivacidade"

            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CONCLUIR"
            android:background="@color/VermelhoBotao"
            android:textColor="@color/TextoBranco"
            android:id="@+id/btnConcluir"
            />

    </LinearLayout>
</ScrollView>